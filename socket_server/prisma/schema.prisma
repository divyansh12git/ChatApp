generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Room{
  id Int @id @default(autoincrement())
  roomName String @unique
  createdAt String?
  createdBy Int
  users Int[]
  message Message[]
}

model Message{
  id Int @id @default(autoincrement())
  authorId Int
  time String
  room Room @relation(fields:[roomId], references: [id])
  roomId Int
}

